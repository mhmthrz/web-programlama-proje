
<h2>Çalışan Listesi</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Yeni Çalışan Ekle</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Salon</th>
            <th>Uzmanlık (İşlem)</th>
            <th>Başlangıç Saati</th>
            <th>Bitiş Saati</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Ad</td>
                <td>@calisan.Salon?.Ad</td>
                <td>@calisan.Islem?.Ad</td>
                <td>@calisan.CalismaBaslangicSaati</td>
                <td>@calisan.CalismaBitisSaati</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@calisan.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
