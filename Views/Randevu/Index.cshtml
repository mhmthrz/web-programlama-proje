@model IEnumerable<webodev.Models.Randevu>

<h2>Randevular</h2>

<!-- Randevu Oluştur Butonu -->
<a asp-action="Create" class="btn btn-primary mb-3">Randevu Oluştur</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarih ve Saat</th>
            <th>Müşteri Adı</th>
            <th>İşlem</th>
            <th>Ücret</th>
            <th>Çalışan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Tarih.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(randevu.Kullanici?.UserName ?? "Belirtilmemiş")</td>
                <td>@(randevu.Islem?.Ad ?? "Belirtilmemiş")</td>
                <td>@(randevu.Islem?.Ucret)</td>
                <td>@(randevu.Calisan?.Ad ?? "Belirtilmemiş")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@randevu.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
