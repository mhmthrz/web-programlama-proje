@model IEnumerable<webodev.Models.Randevu>

<h2>Randevular</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Çalışan</th>
            <th>Salon</th>
            <th>İşlem</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Tarih.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@randevu.Calisan?.Ad</td>
                <td>@randevu.Salon?.Ad</td>
                <td>@randevu.Islem?.Ad</td>
                <td>
                    @(randevu.uygun ? "Müsait" : "Dolu")
                </td>
                <td>
                    @if (randevu.uygun)
                    {
                        <a asp-action="RandevuAl" asp-route-id="@randevu.Id" class="btn btn-primary btn-sm">Randevu Al</a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-sm" disabled>Alındı</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
